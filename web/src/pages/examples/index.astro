---
import Layout from "~/layouts/Layout.astro"
import Section from "@c/Section.astro"

const PAGE_LINKS = [
  {
    label: "Vue",
    href: "#vue",
    component: () => "vue",
  },
  {
    label: "React",
    href: "#react",
    component: () => "react",
  },
  {
    label: "Solid",
    href: "#solid",
    component: () => "solid",
  },
]
---

<Layout>
  <Section top class="px-gx flex flex-col justify-center">
    <h2 class="font-semibold">Examples</h2>
  </Section>

  <!-- frameworks -->
  <Section top class="px-gx flex flex-col justify-center">
    <h2 class="font-semibold">Frameworks</h2>
    <div class="py-lg flex flex-col gap-2">
      {PAGE_LINKS.map(link => <a href={link.href}>{link.label}</a>)}
    </div>
  </Section>

  {
    PAGE_LINKS.map(link => (
      <Section
        id={link.href.replace("#", "")}
        class="h-[80svh] border-t border-b border-gray-700 pt-[10svh]"
      >
        <div class="px-gx">
          <h2 class="font-semibold">{link.label}</h2>
        </div>
      </Section>
    ))
  }

  <Section class="px-gx py-gy">
    <a href="/">Back to home</a>
  </Section>
</Layout>
