---
import { version } from "../../../package.json"
import { LINKS } from "~/content"

import Twitter from "@svg/twitter.astro"
import Github from "@svg/github.astro"

import HoverUl from "@c/HoverUl.astro"
import Svgg from "@c/svg/Svgg.astro"

const links = [
  {
    label: "CONTRACT",
    href: "https://basescan.org/token/0xc139c86de76df41c041a30853c3958427fa7cebd",
    target: "_blank",
  },
  {
    label: "TELEGRAM",
    href: "https://t.me/matemarkets",
    target: "_blank",
  },
  {
    label: "BY PRECOG",
    href: "https://core.precog.market/",
    target: "_blank",
  },
]
---

<nav
  class="px-gx py-gy pointer-events-none fixed top-0 z-10 flex w-full justify-between md:items-start"
>
  <a
    href="/"
    aria-label="back to homepage"
    class="pointer-events-auto flex -translate-[.3rem] flex-col"
  >
    <p
      data-module="alpha"
      class="flex w-[90%] justify-between font-mono text-[.7em] tracking-widest uppercase"
    >
      <span>MATE: a play token</span>
    </p>
  </a>

  <ul class="flex flex-col items-end gap-2 md:flex-row md:gap-4">
    {
      links.map(link => (
        <li class="relative text-[12px] leading-[1em]">
          <a
            href={link.href}
            class:list={[
              link.style && link.style,
              "pointer-events-auto tracking-wide",
            ]}
            target={link.target}
            data-module="alpha"
          >
            {!link.icon && <HoverUl text={link.label} />}
            {link.icon && link.icon === "Twitter" && (
              <figure data-hover="opacity">
                <Twitter width="2rem" />
                <figcaption class="sr-only">{link.label}</figcaption>
              </figure>
            )}
            {link.icon && link.icon === "Github" && (
              <figure data-hover="opacity">
                <Github width="2rem" />
                <figcaption class="sr-only">{link.label}</figcaption>
              </figure>
            )}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
