---
import Svgg from "../svg/Svgg.astro"

const {
  large = "Set",
  title = "Configure Away",
  description = "Configure your slider away",
  flip = false,
} = Astro.props
---

<div class:list={["py-xl flex items-center", flip && "flex-row-reverse"]}>
  <div class="w-grid-8">
    <Svgg class="w-grid-7 ml-grid-1" name={large} />
  </div>

  <div class="w-grids-3 flex flex-col gap-2">
    <h2 class="tr-s text-[1.6rem] leading-[1em] font-semibold text-balance">
      {title}
    </h2>
    <p class="max-w-[80%]">{description}</p>
  </div>
</div>
