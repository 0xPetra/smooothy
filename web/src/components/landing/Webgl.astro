---
import Section from "@c/Section.astro"
import BouncySvg from "./BouncySvg.astro"
import TitleText from "./comps/TitleText.astro"
import Svgg from "../svg/Svgg.astro"
import GithubLink from "../GithubLink.astro"
import HoverUl from "@c/HoverUl.astro"

const WEBGL = {
  title: "MATE token",
  description:
    "play token that holds no economic value.",
}

const link = {
  href: "https://core.precog.market/claim/8453/mate?ref=devconnect",
  label: "CLAIM MATE"
}

---

<Section>
  <div class="flex flex-col py-[8rem]">
    <div class="md:w-grids-11 flex flex-col md:flex-row">
      <div class="block md:hidden">
        <BouncySvg name="mate" />
        <BouncySvg name="token" />
      </div>
      
      <div class="px-gx md:w-grids-3 w-full md:py-8 md:pt-[10rem]">
        <div class="md:pl-grid-1 w-full">
          <div data-module="draw" class="flex w-full flex-col gap-4 md:gap-24">
            <div class="w-[30%] md:w-[80%]">
              <Svgg name="food_toast" class="size-full" />
            </div>

            <div>
              <a
                href={link.href}
                class:list={[
                  link.style && link.style,
                  "pointer-events-auto tracking-wide",
                ]}
                target={link.target}
                data-module="alpha"
              >
              <h2
                data-module="text"
                data-type="chars"
                class="tr-s text-[1.6rem] leading-[1em] font-semibold text-balance"
              >
                {!link.icon && <HoverUl text={link.label} />}
              </h2>         
            </a>

            <p data-module="text" data-type="words" class="max-w-[80%]">
              {WEBGL.description}
            </p>
          </div>

          </div>
        </div>
      </div>

      <div class="hidden md:block">
        <BouncySvg name="mate" />
    <BouncySvg name="token" />
      </div>
    </div>

    <div class="px-gx h-[40svh] py-24">
      <div
        class="md:ml-grid-3 md:w-grids-7 relative flex h-full w-full items-center py-24 md:items-end"
      >
        <div
          data-gl="item"
          class="z-[500] size-full h-[30svh] md:absolute md:h-[50svh]"
        >
        </div>
      </div>
    </div>

  </div>
</Section>
